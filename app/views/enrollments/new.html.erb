<h1>Enroll Student in a Course</h1>

<%= form_with model: @enrollment, url: "/enrollments", method: :post do |form| %>
    <div>
        <%= form.label :user_id, "Student:" %>
        <%= form.collection_select(:user_id, @students, :id, :name) %>
    </div>
    <div>
        <%= form.label :course_id, "Course:" %>
        <%= form.collection_select(:course_id, @courses, :id, :name) %>
    </div>
    <div>
        <%= form.submit "Enroll Student" %>
    </div>
<% end %>